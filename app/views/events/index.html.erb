
  <div class="show-for-large-up">
    <div class="sidebar">
      <% if current_user %>
        <div class="add-event">
          <%= link_to "Add Event", new_event_path, class: "tiny button radius" %>
        </div>
      <% end %>
    </div>
  </div>


  <% @events.each do |event| %>
  <div class="row">
  <div class="large-9 columns medium-10 columns small-12 columns text-left">
    <div class="event-box panel">
      <%= image_tag event.picture, class: "event-pic show-for-medium-up" %>
    <div class="event">
        <div class="event-date">
          <p class="event-month"><%= event.starts_at.strftime("%b") %></p>
          <p class="event-day"><%= event.starts_at.strftime("%d") %></p>
        </div>

        <div class="event-desc">
          <h4 class="event-desc-header"><%= event.title %></h4>
          <p class="event-desc-detail"><span class="event-desc-time"></span><%= event.address %> - <%= event.city %></p>
          <%= link_to "Details", event_path(event), class: "button radius" %>
        </div>
      </div>
    </div>
</div>
</div>
  <% end %>
